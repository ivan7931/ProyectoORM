<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">
  <persistence-unit name="gestionTienda">
    <!-- Clases que se van a mapear -->
    <class>Clases.Cliente</class>
    <class>Clases.Producto</class>
    <class>Clases.Proveedor</class>
    <properties>
      <!-- Propiedades generales -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      
      <!-- Propiedades especificas -->

      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/proyecto_DAO?currentSchema=gestion_tienda"/>
      <property name="jakarta.persistence.jdbc.user" value="usuario_base"/>
      <property name="jakarta.persistence.jdbc.password" value="usuario_base"/>
    </properties>
  </persistence-unit>
</persistence>
