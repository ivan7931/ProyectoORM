<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="gestionTienda">

        <!-- Entidades -->
        <class>Clases.Producto</class>
        <class>Clases.Cliente</class>
        <class>Clases.Proveedor</class>

        <properties>

            <!-- ConexiÃ³n BD -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/proyecto_DAO?currentSchema=gestion_tienda"/>
            <property name="jakarta.persistence.jdbc.user" value="usuario_base"/>
            <property name="jakarta.persistence.jdbc.password" value="usuario_base"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Mostrar SQL (poner false si no quieres verlo) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>

    </persistence-unit>

</persistence>